<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/colorGrey">

    <ImageView
        android:layout_gravity="center"
        android:id="@+id/imv_static"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4" />

    <RelativeLayout
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:id="@+id/rl_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="@dimen/padding"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/texsize_items" />

        <TextView
            android:id="@+id/tv_clouds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tv_day"
            android:padding="@dimen/padding"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/textsize_item" />

        <TextView
            android:id="@+id/tv_temperature_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/padding"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/texsize_items" />

        <TextView
            android:id="@+id/tv_temperature_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_temperature_from"
            android:padding="@dimen/padding"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/textsize_item" />

    </RelativeLayout>

</LinearLayout>